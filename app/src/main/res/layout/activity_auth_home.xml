<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_student_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.roopan.stuconnect.StudentHome">

    <include layout="@layout/tool" android:id="@+id/authhometool"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/authhometool"
        android:gravity="center">

        <TextView
            android:text="Sign Yourself"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/authhomeText"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_marginBottom="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:inputType="textEmailAddress"
            android:id="@+id/authemailText"
            android:background="@drawable/textview"
            android:layout_margin="20dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:hint="Email Address"
            android:textAlignment="center"
            android:textSize="22sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textPassword"
            android:background="@drawable/textview"
            android:ems="10"
            android:id="@+id/authpassText"
            android:hint="Password"
            android:textAlignment="center"
            android:textSize="22sp"
            android:layout_margin="20dp"
            android:padding="10dp" />

        <TableRow
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="70dp">

            <Button
                android:text="Sign IN"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/authsignInbutton"
                android:background="@drawable/button"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_marginRight="5dp"
                android:padding="13dp" />

            <Button
                android:text="Sign UP"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/authRegisterbutton"
                android:background="@drawable/button"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:padding="13dp" />
        </TableRow>
    </LinearLayout>
</RelativeLayout>
